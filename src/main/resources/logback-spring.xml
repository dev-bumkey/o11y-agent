<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %-5level %d{HH:mm:ss.SSS}  %logger{36} %msg%n
            </pattern>
        </encoder>
    </appender>


    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file> logFile.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
<!--            <fileNamePattern> var/log/logFile.%d{yyyy-MM-dd}.log</fileNamePattern>-->
            <fileNamePattern> var/log/logFile.log</fileNamePattern>
            <maxHistory>1</maxHistory>
            <totalSizeCap>300MB</totalSizeCap>

        </rollingPolicy>

        <!--        %F : 로깅이 발생된 파일명, %M : 로깅이 발생된 메소드명-->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSSSSSSS} %d{SSSSSSSSS} %-5level %logger{36} %F-%M ===> %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="OTHER" additivity="false">
        <appender-ref ref="console"/>
        <level value="DEBUG"/>
    </logger>

    <logger name="FILE" additivity="false">
        <appender-ref ref="file"/>
        <level value="DEBUG"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="console"/>

    </root>
</configuration>
